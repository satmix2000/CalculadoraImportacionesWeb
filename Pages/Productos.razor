@page "/"
@page "/productos"
@using CalculadoraImportacionesWeb.Models
@using CalculadoraImportacionesWeb.Services
@using CalculadoraImportacionesWeb.Data
@inject ICalculadoraService CalculadoraService
@inject AppDbContext DbContext
@implements IDisposable

<h3 class="mb-4">ðŸ“¦ Calculadora de Importaciones</h3>

<div class="row mb-4">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Lista de Productos</h5>
            </div>
            <div class="card-body">
                @if (productos == null || !productos.Any())
                {
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> No hay productos. Agrega uno para comenzar.
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover table-striped">
                            <thead class="table-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>DescripciÃ³n</th>
                                    <th>FOB (Â¥)</th>
                                    <th>Cant.</th>
                                    <th>Peso (kg)</th>
                                    <th>Costo Total (USD)</th>
                                    <th>Precio Venta (ARS)</th>
                                    <th>Ganancia %</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var producto in productos)
                                {
                                    <tr @key="producto.ID">
                                        <td>@producto.ID</td>
                                        <td>
                                            <input type="text" class="form-control form-control-sm" 
                                                   @bind="producto.Descripcion" 
                                                   @onchange="async () => await ActualizarProducto(producto)" />
                                        </td>
                                        <td>
                                            <input type="number" step="0.01" class="form-control form-control-sm" 
                                                   @bind="producto.ValorFOBYuan" 
                                                   @onchange="async () => await RecalcularProducto(producto)" />
                                        </td>
                                        <td>
                                            <input type="number" class="form-control form-control-sm" 
                                                   @bind="producto.Cantidad" 
                                                   @onchange="async () => await RecalcularProducto(producto)" />
                                        </td>
                                        <td>
                                            <input type="number" step="0.01" class="form-control form-control-sm" 
                                                   @bind="producto.PesoUnitario" 
                                                   @onchange="async () => await RecalcularProducto(producto)" />
                                        </td>
                                        <td class="text-end">@producto.CostoTotal.ToString("C2")</td>
                                        <td class="text-end">@producto.PrecioVentaARS.ToString("C2")</td>
                                        <td class="text-end">
                                            <span class="badge @GetGananciaBadgeClass(producto.PorcentajeGanancia)">
                                                @producto.PorcentajeGanancia.ToString("N1")%
                                            </span>
                                        </td>
                                        <td>
                                            <button class="btn btn-sm btn-danger" 
                                                    @onclick="async () => await EliminarProducto(producto)">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
            <div class="card-footer">
                <button class="btn btn-success" @onclick="AgregarNuevoProducto">
                    <i class="bi bi-plus-circle"></i> Agregar Nuevo Producto
                </button>
                
                <button class="btn btn-secondary ms-2" @onclick="ActualizarCotizaciones">
                    <i class="bi bi-arrow-clockwise"></i> Actualizar Tasas
                </button>
                
                <button class="btn btn-info ms-2" @onclick="ToggleDetalles">
                    <i class="bi bi-eye"></i> @(mostrarDetalles ? "Ocultar" : "Mostrar") Detalles
                </button>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <!-- Panel de resumen -->
        <div class="card mb-4">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">ðŸ“Š Resumen</h5>
            </div>
            <div class="card-body">
                <p><strong>Total Productos:</strong> @(productos?.Count ?? 0)</p>
                <p><strong>Costo Total USD:</strong> @costoTotalUSD.ToString("C2")</p>
                <p><strong>Valor Total ARS:</strong> @valorTotalARS.ToString("C2")</p>
                <p><strong>Ganancia Promedio:</strong> @gananciaPromedio.ToString("N1")%</p>
            </div>
        </div>
        
        <!-- Calculadora rÃ¡pida -->
        <div class="card">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">âš¡ CÃ¡lculo RÃ¡pido</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="form-label">Valor FOB (Â¥)</label>
                    <input type="number" step="0.01" class="form-control" @bind="calculoRapido.ValorFOB" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Peso Unitario (kg)</label>
                    <input type="number" step="0.01" class="form-control" @bind="calculoRapido.Peso" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Cantidad</label>
                    <input type="number" class="form-control" @bind="calculoRapido.Cantidad" />
                </div>
                <button class="btn btn-primary w-100" @onclick="CalcularRapido" :disabled="calculando">
                    @if (calculando)
                    {
                        <span class="spinner-border spinner-border-sm" role="status"></span>
                        <span> Calculando...</span>
                    }
                    else
                    {
                        <span>Calcular</span>
                    }
                </button>
                
                @if (resultadoRapido != null)
                {
                    <div class="mt-3 p-3 bg-light rounded">
                        <h6>Resultado:</h6>
                        <p><strong>Costo Unitario:</strong> @resultadoRapido.CostoUnitarioARS.ToString("C2") ARS</p>
                        <p><strong>Precio Sugerido:</strong> @resultadoRapido.PrecioSugeridoARS.ToString("C2") ARS</p>
                        <p><strong>Ganancia:</strong> @resultadoRapido.GananciaPorcentaje.ToString("N1")%</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Modal de detalles -->
@if (mostrarDetalles && productoSeleccionado != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5)">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Detalles de Producto</h5>
                    <button type="button" class="btn-close" @onclick="CerrarDetalles"></button>
                </div>
                <div class="modal-body">
                    <ProductoDetalles Producto="productoSeleccionado" />
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<Producto>? productos;
    private bool mostrarDetalles = false;
    private Producto? productoSeleccionado;
    private bool calculando = false;
    
    // Para cÃ¡lculo rÃ¡pido
    private class CalculoRapido
    {
        public decimal ValorFOB { get; set; } = 1000m;
        public decimal Peso { get; set; } = 1.5m;
        public int Cantidad { get; set; } = 10;
    }
    
    private CalculoRapido calculoRapido = new();
    private ResultadoCalculo? resultadoRapido;
    
    // Propiedades calculadas para el resumen
    private decimal costoTotalUSD => productos?.Sum(p => p.CostoTotal) ?? 0;
    private decimal valorTotalARS => productos?.Sum(p => p.PrecioVentaARS * p.Cantidad) ?? 0;
    private decimal gananciaPromedio => productos?.Any() == true ? 
        productos.Average(p => p.PorcentajeGanancia) : 0;
    
    protected override async Task OnInitializedAsync()
    {
        await CargarProductos();
    }
    
    private async Task CargarProductos()
    {
        try
        {
            productos = await DbContext.Productos.ToListAsync();
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al cargar productos: {ex.Message}");
        }
    }
    
    private async Task RecalcularProducto(Producto producto)
    {
        try
        {
            await CalculadoraService.CalcularProductoAsync(producto);
            await DbContext.SaveChangesAsync();
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al recalcular: {ex.Message}");
        }
    }
    
    private async Task ActualizarProducto(Producto producto)
    {
        try
        {
            DbContext.Update(producto);
            await DbContext.SaveChangesAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al actualizar: {ex.Message}");
        }
    }
    
    private async Task AgregarNuevoProducto()
    {
        try
        {
            var nuevoProducto = new Producto
            {
                Descripcion = "Nuevo Producto",
                ValorFOBYuan = 1000m,
                PesoUnitario = 1.0m,
                Cantidad = 1,
                PorcentajeArancelAduana = 0.30m,
                PorcentajeArancelEstadisticas = 0.025m,
                IVA = 0.21m,
                FechaIngreso = DateTime.Now
            };
            
            // Calcular campos iniciales
            nuevoProducto = await CalculadoraService.CalcularProductoAsync(nuevoProducto);
            
            DbContext.Productos.Add(nuevoProducto);
            await DbContext.SaveChangesAsync();
            
            await CargarProductos();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al agregar producto: {ex.Message}");
        }
    }
    
    private async Task EliminarProducto(Producto producto)
    {
        if (productos == null) return;
        
        DbContext.Productos.Remove(producto);
        await DbContext.SaveChangesAsync();
        productos.Remove(producto);
        StateHasChanged();
    }
    
    private async Task ActualizarCotizaciones()
    {
        // Esto actualizarÃ¡ automÃ¡ticamente las tasas a travÃ©s del servicio
        // La prÃ³xima vez que se calcule un producto, usarÃ¡ las nuevas tasas
        Console.WriteLine("Actualizando cotizaciones...");
        // El servicio ya se encarga de actualizar automÃ¡ticamente
    }
    
    private async Task CalcularRapido()
    {
        calculando = true;
        StateHasChanged();
        
        try
        {
            resultadoRapido = await CalculadoraService.CalcularRapidoAsync(
                calculoRapido.ValorFOB,
                calculoRapido.Peso,
                calculoRapido.Cantidad
            );
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error en cÃ¡lculo rÃ¡pido: {ex.Message}");
        }
        finally
        {
            calculando = false;
            StateHasChanged();
        }
    }
    
    private void ToggleDetalles()
    {
        mostrarDetalles = !mostrarDetalles;
    }
    
    private void CerrarDetalles()
    {
        mostrarDetalles = false;
        productoSeleccionado = null;
    }
    
    private string GetGananciaBadgeClass(decimal porcentaje)
    {
        return porcentaje switch
        {
            >= 40 => "bg-success",
            >= 20 => "bg-warning",
            _ => "bg-danger"
        };
    }
    
    public void Dispose()
    {
        // Limpiar recursos si es necesario
    }
}
